<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_task_form" model="ir.ui.view">
        <field name="name">project.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='planned_hours']" position="after">
                <field name="planned_hours_year" string="Planned hours to year" widget="boolean_toggle"/>
            </xpath>
            <xpath expr="//field[@name='remaining_hours']" position="after">
                    <span>
                        <label class="font-weight-bold" for="remaining_hours_month" string="Remaining hours month" attrs="{'invisible': [('planned_hours_year','=',False)]}"/>
                    </span>
                    <field name="remaining_hours_month" widget="float_time" attrs="{'invisible': [('planned_hours_year','=',False)]}" nolabel="1"/>               
            </xpath> 
        </field>
    </record>

    <record id="view_project_task_filter" model="ir.ui.view">
        <field name="name">project.task.search</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='message_needaction']" position="after">
                <separator />
                <filter name="planned_hours_year" string="Planned hours to year" domain="[('planned_hours_year', '=', True)]" />
            </xpath>
        </field>
    </record>

</odoo>
