<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_timesheet_sheet_daily_inherit_form" model="ir.ui.view">
        <field name="name">hr_timesheet.sheet.form (hr_timesheet_daily)</field>
        <field name="model">hr_timesheet.sheet</field>
        <field name="inherit_id" ref="hr_timesheet_sheet.hr_timesheet_sheet_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='timesheet_ids']" position="attributes">
                <attribute name="context"> {'default_date': date_start} </attribute>
            </xpath>
            <xpath expr="//field[@name='timesheet_ids']//field[@name='date']" position="attributes">
                <attribute name="attrs">{'readonly': True}</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
